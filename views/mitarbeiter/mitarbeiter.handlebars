<div class="container">
    <div class="row">
        <div class="col">
            <br>
<br>
<h4>
  Mitarbeiterliste (sortiert nach Projektnamen)
</h4>

<!--Tabelle --> 
<table id="example" class="table table-striped" style="width:100%">
    <thead>
      <tr>
        <th>Mitarbeiter ID</th>
        <th>Nachname</th>
        <th>Vorname</th>
        <th>Summe Arbeitsstunden</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
      <tr>
        <td>{{id}}</td>
        <td>{{nachname}}</td>
        <td>{{vorname}}</td>
        <td>{{stunden}}</td>
        <!-- href Seite plus ID als property mitsenden -->
        <td><a href="/update_mitarbeiter/{{id}}"><i class="fas fa-pencil-alt"></i></a></td>
      </tr>
      {{/each}}
      
    </tbody>
  </table>

<br>
<br>
<a href="/mitarbeiter_anlegen" class="button">Neuen Mitarbeiter anlegen</a>
        </div>
    </div>
</div>
